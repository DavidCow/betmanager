   <top>
      <GridPane prefHeight="38.0" prefWidth="319.0" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="10.0" prefWidth="134.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="109.0" minWidth="10.0" prefWidth="96.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER" prefHeight="26.0" prefWidth="82.0" text="Current Tipster">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin>
            </Label>
            <TextField alignment="CENTER" prefHeight="25.0" prefWidth="139.0" promptText="Tipster Search" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
            </TextField>
            <MenuButton contentDisplay="CENTER" mnemonicParsing="false" popupSide="RIGHT" text="+Add Aliases" GridPane.columnIndex="2">
               <items>
                  <CustomMenuItem fx:id="customMenuItemAddAliases" mnemonicParsing="false" text="Unspecified Action">
                     <content>
                        <fx:include fx:id="optionsAddAliases" source="Options_AddAliases.fxml" />
                     </content></CustomMenuItem>
               </items>
            </MenuButton>
         </children>
      </GridPane>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <TableView prefHeight="357.0" prefWidth="326.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Tipster" />
                <TableColumn prefWidth="75.0" text="Site" />
                  <TableColumn prefWidth="75.0" text="Tips" />
                  <TableColumn prefWidth="75.0" text="Avg. Yield" />
              </columns>
            </TableView>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="213.0" minWidth="10.0" prefWidth="177.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="101.0" minWidth="0.0" prefWidth="72.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="97.0" minWidth="10.0" prefWidth="70.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="64.0" text="Cancel" GridPane.columnIndex="1" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="64.0" text="OK" GridPane.columnIndex="2" />
            <Label text="x Tipsters selected">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin>
            </Label>
         </children>
      </GridPane>
