   <children>
      <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="194.0" text="More" />
      <GridPane prefHeight="135.0" prefWidth="170.0">
      	<columnConstraints>
      		<ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="4.0" prefWidth="93.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="94.0" minWidth="3.0" prefWidth="3.0" />
      		<ColumnConstraints hgrow="SOMETIMES" maxWidth="122.0" minWidth="10.0" prefWidth="84.0" />
      	</columnConstraints>
      	<rowConstraints>
      		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
