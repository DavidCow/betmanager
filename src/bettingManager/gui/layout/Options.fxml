      		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      	</rowConstraints>
      	<children>
            <Button fx:id="dateRangeButton" mnemonicParsing="false" onAction="#handleDateRangeButton" prefHeight="0.0" prefWidth="90.0" text="Date Range" />
